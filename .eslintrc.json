{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "node": true
    },
    "globals": {},
    "rules": {
        "comma-dangle": 1,
        "no-cond-assign": 1,
        "no-constant-condition": 0,
        "no-control-regex": 0,
        "no-debugger": 1,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 1,
        "no-empty-character-class": 1,
        "no-empty": 1,
        "no-ex-assign": 1,
        "no-extra-boolean-cast": 1,
        "no-extra-parens": 0,
        "no-extra-semi": 1,
        "no-func-assign": 1,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 1,
        "no-unexpected-multiline": 1,
        "no-unreachable": 2,
        "valid-typeof": 2,
        "valid-jsdoc": 2,

        "curly": 1,
        "dot-notation": 1,
        "eqeqeq": 2,
        "guard-for-in": 0,
        "no-caller": 0,
        "no-case-declarations": 1,
        "no-div-regex": 1,
        "no-else-return": 1,
        "no-empty-pattern": 1,
        "no-eval": 1,
        "no-fallthrough": 2,
        "no-implied-eval": 2,
        "no-invalid-this": 2,
        "no-iterator": 2,
        "no-labels": 2,
        "no-lone-blocks": 1,
        "no-multi-spaces": 1,
        "no-native-reassign": 2,
        "no-new-func": 1,
        "no-new-wrappers": 2,
        "no-new": 1,
        "no-octal": 1,
        "no-proto": 2,
        "no-return-assign": 1,
        "no-caller": 2,
        "no-self-compare": 1,
        "no-throw-literal": 1,
        "no-unused-expressions": 1,
        "no-useless-call": 1,
        "no-void": 2,
        "no-with": 2,
        "radix": 1,
        "wrap-iife": [2, "inside"],

        "strict": 2,

        "no-delete-var": 2,
        "no-label-var": 2,
        "no-shadow-restricted-names": 1,
        "no-undef": 2,
        "no-unused-vars": [1, {"vars": "local", "args": "none"}],

        "callback-return": [2, ["callback", "clbk"]],
        "handle-callback-err": 1,
        "no-mixed-requires": 1,
        "no-new-require": 1,

        "array-bracket-spacing": 1,
        "block-spacing": 1,
        "brace-style": [1, "1tbs", {"allowSingleLine": true}],
        "comma-spacing": [1, {"before": false, "after": true}],
        "comma-style": [1, "last"],
        "computed-property-spacing": [1, "never"],
        "consistent-this": [2, "self"],
        "func-style": [1, "declaration"],
        "indent":  [1, 4, {"SwitchCase": 1}],
        "key-spacing": [1, {"beforeColon": false, "afterColon": true}],
        "linebreak-style": [1, "unix"],
        "new-cap": 2,
        "new-parens": 1,
        "no-array-constructor": 1,
        "no-bitwise": 1,
        "no-continue": 1,
        "no-lonely-if": 1,
        "no-mixed-spaces-and-tabs": 1,
        "no-multiple-empty-lines": 1,
        "no-new-object": 1,
        "no-spaced-func": 1,
        "no-trailing-spaces": 1,
        "object-curly-spacing": 1,
        "operator-assignment": [1, "always"],
        "padded-blocks": [1, "never"],
        "quote-props": [1, "as-needed"],
        "quotes": [1, "double"],
        "require-jsdoc": 1,
        "semi-spacing": [1, {"before": false, "after": true}],
        "semi": [2, "always"],
        "keyword-spacing": 1,
        "space-before-blocks": 1,
        "space-before-function-paren": [1, "always"],
        "space-in-parens": [1, "never"],
        "space-infix-ops": 1,
        "space-unary-ops": [1, {"words": true, "nonwords": false}],
        "spaced-comment": [1, "always", {"markers": ["@CD"]}],
        "wrap-regex": 1
    }
}
